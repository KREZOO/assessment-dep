{
   "extends": ["next/core-web-vitals", "prettier"],
   "rules": {
      "semi": ["error", "never"],
      "quotes": ["error", "single", { "avoidEscape": true }],
      "comma-dangle": ["error", "never"],
      "arrow-parens": ["error", "always"],
      "object-curly-spacing": ["error", "always"],
      "max-len": [
         "error",
         100,
         { "tabWidth": 3 },
         { "ignoreStrings": true, "ignoreComments": true }
      ]
   }
}
